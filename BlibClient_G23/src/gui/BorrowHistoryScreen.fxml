<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
	xmlns="http://javafx.com/javafx/8.0.171"
	fx:controller="gui.BorrowHistoryController"
	style="-fx-background-color: #f4f4f4;">

	<top>
		<HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
			<Label text="Reader Card"
				style="-fx-font-size: 20px; -fx-font-weight: bold;" />
		</HBox>
	</top>

	<center>
		<GridPane alignment="CENTER" hgap="10" vgap="10"
			style="-fx-padding: 20;">
			<Label text="Subscriber:" GridPane.columnIndex="0"
				GridPane.rowIndex="0" />
			<TableView fx:id="borrowHistoryTableView">
				<columns>
					<TableColumn fx:id="borrowIdColumn" text="Borrow ID" />
					<TableColumn fx:id="titleColumn" text="Title" />
					<TableColumn fx:id="borrowDateColumn"
						text="Borrow Date" />
					<TableColumn fx:id="returnDateColumn"
						text="Return Date" />
				</columns>
			</TableView>
		</GridPane>
	</center>

	<bottom>
		<GridPane alignment="CENTER" hgap="10" vgap="10"
			style="-fx-padding: 10;">
			<Button text="Back" fx:id="backButton" onAction="#onBackClick"
				GridPane.columnIndex="0" />
		</GridPane>
	</bottom>

</BorderPane>
