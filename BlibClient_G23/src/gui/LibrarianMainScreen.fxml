<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1"
	xmlns="http://javafx.com/javafx/8.0.171"
	fx:controller="gui.LibrarianMainController"
	style="-fx-background-color: #f4f4f4;">
	<top>
		<VBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
			<Label fx:id="welcomeLabel" text="Hello Librarian !"
				style="-fx-font-size: 18px; -fx-font-weight: bold;" />
			<Label text="Choose your action please"
				style="-fx-font-size: 18px; -fx-font-weight: bold;" />
		</VBox>
	</top>

	<center>
		<VBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
			<Button text="Manage Subscriber" fx:id="manageUsersButton"
				onAction="#onManageSubscriberClick" />
			<Button text="View Subscriber Reader Crds"
				fx:id="readerCardButton" onAction="#onReaderCardClick" />
			<Button text="Borrow Book" fx:id="borrowBookButton"
				onAction="#onBorrowBookClick" />
			<Button text="Return Book" fx:id="returnBookButton"
				onAction="#onReturnBookClick" />
			<Button text="Reports" fx:id="reportsButton"
				onAction="#onReportsClick" />
		</VBox>
	</center>

	<bottom>
		<HBox alignment="CENTER_LEFT" spacing="10"
			style="-fx-padding: 10;">
			<Button text="Exit" fx:id="exitButton" onAction="#onExitClick" />
			<Button text="Logout" fx:id="logoutButton"
				onAction="#onLogoutClick" />
		</HBox>
	</bottom>
</BorderPane>
