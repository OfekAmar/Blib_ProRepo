<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
	xmlns:fx="http://javafx.com/fxml/1" spacing="10" alignment="CENTER"
	fx:controller="gui.ClientConnectController">
	<padding>
		<Insets top="20" right="20" bottom="20" left="20" />
	</padding>

	<Label text="Server Connection Panel"
		style="-fx-font-size: 18px;" />
	<TextField fx:id="portField" promptText="Enter Server Port" />
	<TextField fx:id="hostField" promptText="Enter Host Name" />
	<Button text="Connect" onAction="#connectToServer" />
</VBox>
