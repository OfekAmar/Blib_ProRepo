<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>



<BorderPane xmlns:fx="http://javafx.com/fxml/1"
	xmlns="http://javafx.com/javafx/8.0.171"
	fx:controller="gui.ManagmentSubscriberController"
	style="-fx-background-color: #f4f4f4;">
	<top>
		<VBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
			<Label fx:id="welcomeLabel" text="Subscriber Managment"
				style="-fx-font-size: 18px; -fx-font-weight: bold;" />

			<HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
				<TextField fx:id="searchField" promptText="Enter book id" />
				<Button fx:id="searchButton" onAction="#onSearchSubscriberClick" text="Search Subscriber" />
				<Button fx:id="scanSubscriberCardButton" onAction="#onScanSubscriberCardClick" text="Scan Subscriber card" />
            <Button fx:id="resetSearchButton" layoutX="372.0" layoutY="20.0" onAction="#onResetSearchClick" text="reset search" />
			</HBox>
		</VBox>
	</top>

	<center>

		<VBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
			<TableView fx:id="subscribersTable">
						<columns>
							<TableColumn fx:id="idColumn" prefWidth="194.0" text="id" />
							<TableColumn fx:id="nameColumn" prefWidth="51.0" text="name" />
							<TableColumn fx:id="phoneColumn" prefWidth="117.0" text="phone" />
							<TableColumn fx:id="statusColumn" prefWidth="110.0" text="status" />
							<TableColumn fx:id="emailColumn" prefWidth="209.0" text="email" />
						</columns>
					</TableView>
			<HBox alignment="CENTER" spacing="10">
				<Button text="Reader Card" fx:id="readerCard"
					onAction="#onReaderCardClick" />
				<Button text="edit Profile" fx:id="editProfileButton"
					onAction="#onEditProfileClick" />
			</HBox>

			<Button text="Add New Subscriber" fx:id="addSubscriberButton"
				onAction="#onAddSubscriberClick" />
		</VBox>
	</center>

	<bottom>
		<HBox alignment="CENTER_LEFT" spacing="10"
			style="-fx-padding: 10;">
			<Button text="Back to main" fx:id="exitButton"
				onAction="#onBackClick" />
		</HBox>
	</bottom>
</BorderPane>
