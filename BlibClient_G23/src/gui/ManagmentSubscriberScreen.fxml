<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
	xmlns="http://javafx.com/javafx/8.0.171"
	fx:controller="gui.ManagmentSubscriberController"
	style="-fx-background-color: #f4f4f4;">
	<top>
		<VBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
			<Label fx:id="welcomeLabel" text="Subscriber Managment Screen"
				style="-fx-font-size: 18px; -fx-font-weight: bold;" />

			<HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
				<TextField fx:id="searchField"
					promptText="Enter subscriber name" />
				<Button text="Search Subscriber" fx:id="searchButton"
					onAction="#onSearchSubscriberClick" />
			</HBox>
		</VBox>
	</top>

	<center>

		<VBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
			<TextField fx:id="subscriberDetailsField"
				promptText="Subscriber details will appear here" editable="false" />

			<HBox alignment="CENTER" spacing="10">
				<Button text="Reader Card" fx:id="readerCard"
					onAction="#onReaderCardClick" />
				<Button text="View Profile" fx:id="viewProfileButton"
					onAction="#onViewProfileClick" />
			</HBox>

			<Button text="Add New Subscriber" fx:id="addSubscriberButton"
				onAction="#onAddSubscriberClick" />
			<Button text="Scan Subscriber Card" fx:id="scanCardButton"
				onAction="#onScanCardClick" />
		</VBox>
	</center>

	<bottom>
		<HBox alignment="CENTER_LEFT" spacing="10"
			style="-fx-padding: 10;">
			<Button text="Back to main" fx:id="exitButton"
				onAction="#onBackClick" />
		</HBox>
	</bottom>
</BorderPane>
