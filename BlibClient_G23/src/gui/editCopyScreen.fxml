<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane prefHeight="246.0" prefWidth="400.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.EditCopyController">

    <center>
        <GridPane alignment="CENTER" hgap="10" style="-fx-padding: 20;" vgap="10">
          
            <Label text="Book Code:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <Label fx:id="bookCodeLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />

   
            <Label text="Copy ID:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <Label fx:id="copyIdLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />

     
            <Label text="Location:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="locationField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

       
            <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <Label fx:id="statusLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <columnConstraints>
                <ColumnConstraints minWidth="100.0" />
                <ColumnConstraints minWidth="200.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="30.0" />
                <RowConstraints minHeight="30.0" />
                <RowConstraints minHeight="30.0" />
                <RowConstraints minHeight="30.0" />
            </rowConstraints>
        </GridPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
            <Button fx:id="saveButton" onAction="#onSaveClick" text="save" />
            <Button fx:id="cancelButton" onAction="#onCancelClick" text="Cancel" />
        </HBox>
    </bottom>
</BorderPane>
