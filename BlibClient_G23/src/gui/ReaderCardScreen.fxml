<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
	xmlns="http://javafx.com/javafx/8.0.171"
	fx:controller="gui.ReaderCardController"
	style="-fx-background-color: #f4f4f4;">

	<top>
		<HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
			<Label text="Reader Card"
				style="-fx-font-size: 20px; -fx-font-weight: bold;" />
		</HBox>
	</top>

	<center>
		<GridPane alignment="CENTER" hgap="10" vgap="10"
			style="-fx-padding: 20;">
			<Label text="Subscriber:" GridPane.columnIndex="0"
				GridPane.rowIndex="0" />
			<TextField fx:id="searchField"
				promptText="Enter subscriber name or ID" GridPane.columnIndex="1"
				GridPane.rowIndex="0" />
			<Button text="Search" fx:id="searchButton"
				onAction="#onSearchClick" GridPane.columnIndex="2"
				GridPane.rowIndex="0" />

			<ListView fx:id="resultsListView" GridPane.columnIndex="0"
				GridPane.rowIndex="1" GridPane.columnSpan="3" prefHeight="200" />
		</GridPane>
	</center>

	<bottom>
		<GridPane alignment="CENTER" hgap="10" vgap="10"
			style="-fx-padding: 10;">
			<Button text="Back" fx:id="backButton" onAction="#onBackClick"
				GridPane.columnIndex="0" />
			<Button text="Edit" fx:id="editButton" onAction="#onEditClick"
				GridPane.columnIndex="1" GridPane.halignment="RIGHT" />
		</GridPane>
	</bottom>

</BorderPane>
